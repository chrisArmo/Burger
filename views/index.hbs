<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center text-md-left text-light mt-4 ml-md-4">Eat Dat Burger!</h1>
        </div>
    </div>
    
    <div class="row my-3">
        <div class="col-md-5 col-lg-4 mt-md-4 add-burger-col">
            <div class="card p-3">
                <img id="logo" class="card-img-top my-1 my-md-3 mx-auto" src="/assets/img/smiling-burger.png" alt="Smiling cartoon burger">
                <div class="card-body">
                    <div class="form-row mb-1 my-md-3">
                        <div class="col-8">
                            <input type="text" class="form-control" placeholder="Add A Burger">
                        </div>

                        <div class="col-4 text-right">
                            <button class="btn btn-warning add-burger">Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-7 col-lg-8">
            <h3 class="text-center text-light my-3">Get At This</h3>
            
            <ul class="list-group">
            {{#each burgers}}
                <li 
                    class="list-group-item d-flex justify-content-between align-items-center"
                    data-id="{{id}}">
                    {{burger_name}}
                    <span class="badge badge-warning badge-pill btn btn-warning p-2 mx-1 devour">Devour</span>
                </li>
            {{/each}}
            </ul>

            <h3 class="text-center text-light my-3">Devoured That</h3>
            
            <ul class="list-group">
                {{#each devouredBurgers}}
                <li class="list-group-item d-flex justify-content-between align-items-center" data-id="{{id}}">
                    {{burger_name}}
                    <span class="badge badge-warning badge-pill btn btn-warning p-2 mx-1 digest">Digest</span>
                </li>
                {{/each}}
            </ul>
        </div>

